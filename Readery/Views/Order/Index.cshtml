@model DeliveryInformationViewModel


<form class="pt-5">
    <div class="row g-5 justify-content-evenly w-100 mx-auto" >

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="col-md-5 shadow p-5 h-100 position-relative pd-mb-res" style="border: 1px solid black">

            <h3 class="position-absolute text-nowrap" style="left: 0; top: -1.7em"> 
                <span class="num-element">1</span> Personal Details
            </h3>

            <div class="row mb-4">
                <label class="col-sm-4 col-form-label col-form-label-sm">Name:</label>
                <div class="col-sm-8">
                    <div class="input-after">
                        <input asp-for="PersonalInformation.FirstName" placeholder="name..." class="form-control form-control-sm" />
                    </div>
                    <span asp-validation-for="PersonalInformation.FirstName" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-5">
                <label class="col-sm-4 col-form-label col-form-label-sm">Surname:</label>
                <div class="col-sm-8">
                    <div class="input-after">
                        <input asp-for="PersonalInformation.LastName" placeholder="surname..." class="form-control form-control-sm" />
                    </div>
                    <span asp-validation-for="PersonalInformation.LastName" class="text-danger"></span>
                </div>
            </div>

            <hr/>

            <div class="row mt-5 mb-4">
                <label class="col-sm-4 col-form-label col-form-label-sm">Email:</label>
                <div class="col-sm-8">
                    <div class="input-after">
                        <input asp-for="PersonalInformation.Email" placeholder="email..." class="form-control form-control-sm" />
                    </div>
                    <span asp-validation-for="PersonalInformation.Email" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <label class="col-sm-4 col-form-label col-form-label-sm">Phone number:</label>
                <div class="col-sm-8">
                    <div class="input-after">
                        <input asp-for="PersonalInformation.PhoneNumber" placeholder="phone number..." class="form-control form-control-sm" />
                    </div>
                    <span asp-validation-for="PersonalInformation.PhoneNumber" class="text-danger"></span>
                </div>
            </div>
                
        </div>

        <div class="col-md-6 shadow p-5 h-100 position-relative" style="border: 1px solid black">

            <h3 class="position-absolute text-nowrap" style="left: 0; top: -1.7em">
                <span class="num-element">2</span> Delivery Information
            </h3>

            <div class="row mb-4">
                <label class="col-sm-2 col-form-label col-form-label-sm">Street:</label>
                <div class="col-sm-9">
                    <div class="input-after">
                        <input asp-for="ShippingAddress.Street" placeholder="street..." class="form-control form-control-sm" />
                    </div>
                    <span asp-validation-for="ShippingAddress.Street" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-4">
                <label class="col-sm-2 col-form-label col-form-label-sm">City:</label>
                <div class="col-sm-4 di-c-mb-res">
                    <div class="input-after">
                        <input asp-for="ShippingAddress.City" placeholder="city..." class="form-control form-control-sm" />
                    </div>
                    <span asp-validation-for="ShippingAddress.City" class="text-danger"></span>
                </div>

                <label class="col-sm-1 col-form-label col-form-label-sm">Zip:</label>
                <div class="col-sm-4">
                    <div class="input-after">
                        <input asp-for="ShippingAddress.ZipCode" placeholder="zip..." class="form-control form-control-sm" />
                    </div>
                    <span asp-validation-for="ShippingAddress.ZipCode" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <label class="col-sm-3 col-form-label col-form-label-sm">Country:</label>
                <div class="col-sm-8">
                    <select asp-for="ShippingAddress.CountryId" class="form-select hover-arrow">
                        <option value="">Choose a country...</option>
                        @* @foreach (var country in Model.ShippingAddress.Countries)
                        {
                            <option value="@country.Id">@country.Name</option>
                        } *@
                    </select>
                    <span asp-validation-for="ShippingAddress.CountryId" class="text-danger"></span>
                </div>
            </div>

        </div>
    </div>

    <div class="d-flex justify-content-between mt-5">
        <a asp-area="" asp-controller="Cart" asp-action="Index">Go Back to Cart</a>
        
        <button class="btn btn-primary" type="submit">
            <span class="me-2">Proceed to Summary</span> <i class="fa-solid fa-arrow-right"></i>
        </button>
            
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}



