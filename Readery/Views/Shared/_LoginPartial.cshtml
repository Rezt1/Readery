@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="btn-group d-sm-inline-flex d-block me-sm-2 mb-sm-0 mb-2">
            <button type="button" class="dropdown-toggle user-btn" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="fa-solid fa-user"></i>
            </button>
            <ul class="dropdown-menu dropdown-menu-end">
                <li>
                    <a asp-area="" asp-controller="Order" asp-action="History" class="dropdown-item">Orders</a>
                </li>
                <li>
                    <form class="form-inline" asp-area="" asp-controller="Account" asp-action="Logout">
                        <button type="submit" class="dropdown-item">Logout</button>
                    </form>
                </li>
            </ul>
        </li>

        <partial name="_CartPartial"></partial>
    }
    else
    {
        <li class="btn-group d-sm-inline-flex d-block me-sm-2 mb-sm-0 mb-2">
            <button type="button" class="dropdown-toggle user-btn" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="fa-solid fa-user"></i>
            </button>
            <ul class="dropdown-menu dropdown-menu-end">
                <li>
                    <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Login">Sign in</a>
                </li>
                <li>
                    <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
                </li>
            </ul>
        </li>
        
        <partial name="_CartPartial"></partial>
    }
</ul>